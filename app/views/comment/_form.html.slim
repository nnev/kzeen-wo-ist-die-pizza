script
  | var form = $("#commentForm");
  | var input = $("#commentInput");
  | form.on("show.bs.modal", function(e) {
  |   var url = $(e.relatedTarget).attr("href");
  |   form.attr("action", url);
  |   var prevcomment = $(e.relatedTarget).attr("data-comment");
